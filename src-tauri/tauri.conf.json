{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "windows-gif-screenshotter",
  "version": "0.1.0",
  "identifier": "com.windows-gif-screenshotter.app",
  "build": {
    "frontendDist": "../src"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "windows-gif-screenshotter",
        "resizable": false, 
        "transparent": true, 
        "alwaysOnTop": true,
        "decorations": false
        
      },
      {
        "label": "overlay",
      "url": "overlay.html",
      "transparent": true,
    "decorations": false,
    "alwaysOnTop": true,
    "resizable": false,
    "width": 400,
    "height": 300,
    "visible": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
